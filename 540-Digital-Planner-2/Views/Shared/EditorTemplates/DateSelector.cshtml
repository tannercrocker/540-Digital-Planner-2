@{
    String name = "Date";
    if(ViewBag.name != null)
    {
        name = ViewBag.name;
    }

    int index = 0;
    if (ViewBag.index != null)
    {
        index = ViewBag.index;
    }

    DateTime dt = DateTime.Now;
    if (ViewBag.date_time != null)
    {
        dt = ViewBag.date_time;
    }
}
<div class="DateSelector bootstrap-datetimepicker-widget" style="overflow:hidden;">
    <input id="@name-@index" name="@name" class="form-control" type="hidden" value="@dt.ToString("M/d/yyy")" />
    <div class="form-group">
        <div class="row">
            <div class="col-md-8">
                <div id="datepicker-@index"></div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#datepicker-@index").datetimepicker({
                format: "M/D/YYYY",
                useCurrent: true,
                inline: true,
                sideBySide: true
            });


            $("#datepicker-@index").on('dp.change', function (ev) {
                //console.log(ev.date.format("M/D/YYYY LT"))
                $("#@name-@index").val(ev.date.format("M/D/YYYY"));
            });
        });
    </script>
</div>